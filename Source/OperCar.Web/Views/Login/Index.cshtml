@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/particles")
    @Styles.Render("~/Content/login")
</head>
<body class="text-center">
    <div id="particles-js"></div>
    <form class="form-signin position-relative">
        <img class="mb-4" src="~/Content/images/logo.gif">
        <div class="content-form-login">

            <h1 class="h3 mb-3 font-weight-normal">Acceso a intranet</h1>
            <div class="div-text-login">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" id="inputEmail" class="form-control" placeholder="Email" required="" autofocus="">
            </div>
            <div class="div-text-login">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
            </div>
        </div>
        <div class="">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Acceder</button>
        </div>
        @*<p class="mt-5 mb-3 text-muted">© </p>*@
    </form>

    @*<div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
            </ul>
        </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/particles")
</body>
</html>
