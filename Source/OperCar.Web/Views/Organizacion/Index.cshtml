@model IEnumerable<OpeCar.BusinessEntities.GestionArchivo.ESeccionResponse>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css/areas/organizacion")

<section class="section">
    <div class="container pb-5">
        <div class="row vertical-default">
            <div class="col-md-12 position-inh">
                @foreach (var item in Model)
                {
                    <div class="fondo-mision position-inh" id="seccion-organizacion-@item.IdSeccion">
                        <h1 class="text-left  margin-top-20 margin-bottom-20 text-normal  normal regular  subtittle-organizacion ">
                            @item.Titulo
                        </h1>
                    </div>
                    <div class="col-text-1 text-normal font_24px element-top-20 element-bottom-20 align-organizacion" data-os-animation="none" data-os-animation-delay="0s">

                        @Html.Raw(item.Contenido)
                    </div>
                }
            </div>
        </div>
    </div>
</section>
@section css {
    @Styles.Render("~/Content/FroalaEditor")
}

@section Scripts{
    @Scripts.Render("~/bundles/menu_organizacion")
}