<section class="section">
    <div class="container">
        <div class="row vertical-default">
            <div class="col-md-12 position-inh">

                <h1 class="text-left  margin-top-20 margin-bottom-20 text-normal  normal regular ">
                    @ViewBag.Title
                </h1>
                <div class="col-md-12 position-inh text-right">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalSubArea" style="text-align: right; right: 0">
                        +
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section background_soft_gray">
    <br/>
    <div class="container">
        <div class="row vertical-top">
            @{
                if (Model.ListaSubAreas.Any(x => !x.IdPadre.HasValue && x.EsUltimo))
                {
                    <div class="col-12">
                        <div class="lista-ultimo-subArea subAreaTodo active">
                            <span>Todo</span>
                        </div>
                        @foreach (var item in Model.ListaSubAreas.Where(x => !x.IdPadre.HasValue && x.EsUltimo))
                        {
                            <div class="lista-ultimo-subArea" data-id="@item.IdSubArea">
                                <span>@item.Descripcion</span>
                            </div>
                        }
                    </div>
                    <div class="row col-12">
                        @foreach (var doc in from item in Model.ListaSubAreas.Where(x => !x.IdPadre.HasValue && x.EsUltimo)
