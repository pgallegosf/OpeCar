    <link rel="stylesheet" href="http://jeremyfagis.github.io/dropify/dist/css/dropify.min.css"/>
    @RenderSection("css", required: false)
</head>
<body>
    <div class="top-bar" id="topBar">
        <div class="container">
            <div class="top top-left">
            </div>
            <div class="top top-right">
                <div class="sidebar-widget widget_search">
                    <div class="textwidget custom-html-widget">
                        <a id="btn-search-document" href="javascript:void(0);">
                            <i class="menu-icon fas fa-search"></i>&nbsp;Busqueda
                        </a>
                    </div>
                </div>
                <div id="custom_html-3" class="widget_text sidebar-widget text-right small-screen-center widget_custom_html">
                    <div id="mant-telefono" class="textwidget custom-html-widget">
                        <a href="tel:+34913489444">CAE: 987947810/ 999216057 / 043-604014 Anexo 130014.</a>
                    </div>
                </div>
                <div id="custom_html-5" class="widget_text sidebar-widget text-right small-screen-center widget_custom_html">
                    <div class="textwidget custom-html-widget">
                        <a id="salirtopbar" href="@Url.Action("Logout", "Login")">
                            <i class="menu-icon fas fa-user"></i>&nbsp;SALIR
                           (@Session["userName"].ToString())
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="masthead" class="menu navbar navbar-static-top header-logo-left-menu-below oxy-mega-menu navbar-sticky navbar-not-mobile-stuck">
        @Html.Action("MenuNavbar","Aplicacion")
    </div>  
<div class="content body-content" role="main">
    <article style="margin-top: 30px;">
        @RenderBody()
    </article>
    <section class="section">
        <div class="container">
            
        </div>
    </section>
    <footer id="footer" role="contentinfo">
        <section class="section">
            <div class="container">
                <hr>
                <div class="row margin-bottom-40 margin-top-40">
                    <div class="col-sm-4">
                        <ul id="mant-menu-footer" class="list-group list-group-flush">
                        </ul>
                    </div>
                    <input id="txtEsSuperAdmin" type="hidden" value="@Html.Raw(ViewBag.EsSuperAdmin)"/>
                    <div class="col-sm-4">
                        <div id="text-2" class="sidebar-widget  widget_text">
                            <h3 class="sidebar-header">Sobre nosotros</h3>
                            <div id="mant-sobre-nosotros" class="textwidget hide"></div>

                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div id="text-19" class="sidebar-widget  widget_text">
                            <div class="textwidget hide">
                                <p>© @DateTime.Now.Year <span id="mant-derechos-reservados"></span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </footer>
</div>

@* Modal ver archivo *@
<div class="modal fade" id="modalverarchivo" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Ver Archivo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe id="iframeArchivo" style="border:1px solid #666CCC; height:1100px ; width:100%" title="PDF in an i-Frame" src="#" frameborder="1" scrolling="auto"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btnCloseModal" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarSubArea">Guardar</button>
            </div>
        </div>
    </div>
</div>

@* Modal buscar documentos *@
<div class="modal fade" id="modal-search-document" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Busqueda de archivos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="formfiledocumento" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">                        
                        <input type="text" id="txt-search-document" class="form-control" placeholder="Busqueda"/>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row col-12 div-document">  
                        <div style="text-align:center;width:100%;">
                            <i class="fa fa-search" style="color:gray;font-size:50px;"></i>
                        </div>
                    </div>                    
                </div>
            </form>
        </div>
    </div>
</div>
    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/home")

    <script type="text/javascript" src="http://jeremyfagis.github.io/dropify/dist/js/dropify.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>

</body>
</html>