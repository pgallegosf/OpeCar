@model IEnumerable<OpeCar.BusinessEntities.GestionArchivo.ESeccionResponse>

<div class="container-nav">
    <nav class=" navbar navbar-expand-lg navbar-light">
        <a id="mant-logo" class="navbar-brand" href="@Url.Action("Index", "Aplicacion")"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="javascript:void(0);" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        CONOCE TU ORGANIZACIÓN
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @{
                            foreach (var item in Model)
                            {
                                <a class="dropdown-item" href="@Url.Action("Index", "Organizacion")" id="menu-organizacion-@item.IdSeccion">@item.Titulo</a>
                            }
                        }                       
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Aplicacion")">APLICACIONES</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "SIG")">SIG</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "GDocumentaria")">GESTIÓN DOCUMENTARIA</a>
                </li>
                @if (@ViewBag.EsSuperAdmin)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            MANTENIMIENTO
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="@Url.Action("Index", "Log")">Reportes</a>
                            <a class="dropdown-item" href="@Url.Action("OrganizacionMantenimiento", "Organizacion")">Organizacion</a>
                            <a class="dropdown-item" href="@Url.Action("AplicacionMantenimiento", "Aplicacion")">Aplicaciones</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "Seguridad")">Seguridad</a>
                            <a class="dropdown-item" href="@Url.Action("Mantenimiento", "Organizacion")">Mantenimiento</a>
                        </div>
                    </li>
                }

            </ul>
        </div>
    </nav>
</div>

<script type="text/javascript">
@foreach (var item in Model)
{
    <text>
        var menu_organizacion = document.getElementById("menu-organizacion-@item.IdSeccion");
        menu_organizacion.addEventListener("click", function () {            
            localStorage.setItem("menu-organizacion-id", @item.IdSeccion);
        });
    </text>
}
</script>
